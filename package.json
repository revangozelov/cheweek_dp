{
  "name": "cheweek_dp_new",
  "productName": "Cheweek",
  "version": "1.1.5",
  "description": "Cheewek desktop app",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "buildmac": "electron-packager . Cheweek --overwrite --platform=darwin --icon=src/logo_512.icns --prune=true --out=../builds --verbose",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Revan Gozalov",
    "email": "gozelov.revan@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-tabs": "^1.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^14.2.9",
    "electron-builder": "^23.1.0",
    "electron-packager": "^16.0.0",
    "webpack": "^5.74.0"
  },
  "build": {
    "appId": "com.cheweek_dp_new.app",
    "productName": "Cheweek",
    "target": "NSIS",
    "icon": "src/logo_512.icns",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "mac": {
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "icon": "src/logo_512.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/logo_512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "src/logo_512.png"
    }
  }
}
